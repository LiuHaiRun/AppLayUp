<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jy.liuhairui.applayup">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />



    <application
        android:name=".frame.Application10"
        android:allowBackup="true"
        android:icon="@drawable/share_icon_little"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/MyAppTheme">
        <activity
            android:name=".HomeActivity"
            android:theme="@style/MyAppTheme" />
        <activity
            android:name=".GuideActivity"
            android:theme="@style/NoAppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SetActivity" />
        <activity android:name=".FavTeamActivity" />
        <activity android:name=".DetailsActivity" />
        <activity android:name=".BaseNewsDetailActivity" />
        <activity android:name=".TestActivity" />
        <activity android:name=".ImageActivity" />
        <activity android:name=".LogonActivity" />
        <activity android:name=".EnrollActivity"></activity>


        <!--内容提供者 解决Android7.0版本相机问题-->
        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.jy.liuhairui.applayup.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>

</manifest>