<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- ToolBar-->
    <style name="MyAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/homt_tab_tool_e45040</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--初始化数据进度条样式-->
    <style name="DialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!--pop的动画样式-->
    <style name="pwAnim" parent="android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/pw_enter</item>
        <item name="android:windowExitAnimation">@anim/pw_exit</item>
    </style>

    <!--新闻详情底部的评论 style-->
    <style name="lib_style_news_detail_bottom_comment_text" parent="@style/lib_style_text">
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/grey_first_222222</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">6dip</item>
        <item name="android:paddingTop">6dip</item>
        <item name="android:paddingBottom">6dip</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="lib_style_text" parent="lib_style_base">
        <item name="android:textColor">@color/grey_first_222222</item>
    </style>

    <style name="lib_style_base">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--新闻详情底部的评论数 style-->
    <style name="lib_style_news_detail_bottom_comment" parent="@style/lib_style_text">
        <item name="android:layout_width">27dp</item>
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:textColor">@color/grey_first_222222</item>
        <item name="android:gravity">left</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_gravity">right|top</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:layout_marginLeft">13dp</item>
        <item name="android:paddingLeft">1dp</item>
    </style>
    <style name="Button_ThreadInfoCommentsend" parent="ButtonWidth">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/app_theme_E45040</item>
        <item name="android:layout_marginLeft">5dip</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="ButtonWidth" parent="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--弹出相机相册-->
    <style name="AppTheme.BottomSheet" parent="android:Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@null
        </item><!-- 为了避免在有 NavigationBar 的手机上 Dialog 从 NavigationBar 底部上来。去掉 Dialog 的动画，使用 View 的动画。-->
        <item name="android:layout_width">match_parent</item>
    </style>
</resources>
